<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="800.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
         <MenuBar prefHeight="38.0" prefWidth="1440.0">
             <menus>
                 <Menu mnemonicParsing="false" style="-fx-font-size: 1.5em;" text="Пользователь">
                     <items>
                         <MenuItem mnemonicParsing="false" text="Close" />
                     </items>
                     <graphic>
                         <ImageView fitHeight="29.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../../resources/profile.png" />
                             </image>
                         </ImageView>
                     </graphic>
                 </Menu>
                 <Menu style="-fx-padding: 0 40 0 0;" visible="false" />
                 <Menu mnemonicParsing="false" style="-fx-font-size: 1.5em;" text="Язык">
                     <items>
                         <MenuItem mnemonicParsing="false" text="Русский" />
                     </items>
                     <items>
                         <MenuItem mnemonicParsing="false" text="Исландский" />
                     </items>
                     <items>
                         <MenuItem mnemonicParsing="false" text="Греческий" />
                     </items>
                     <items>
                         <MenuItem mnemonicParsing="false" text="Испанский (Пуэрто-Рико)" />
                     </items>
                     <graphic>
                         <ImageView fitHeight="29.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../../resources/language.png" />
                             </image>
                         </ImageView>
                     </graphic>
                 </Menu>
                 <Menu style="-fx-padding: 0 40 0 0;" visible="false" />
                 <Menu mnemonicParsing="false" style="-fx-font-size: 1.5em;" text="Выйти">
                     <graphic>
                         <ImageView fitHeight="37.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../../resources/exit.png" />
                             </image>
                         </ImageView>
                     </graphic>
                 </Menu>
             </menus>
         </MenuBar>
    </top>
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" style="-fx-font-size: 1.5em;" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="40.0" tabMinHeight="30.0">
            <tabs>
                <Tab text="Коллекция">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <!-- Добавляем TableView с привязками ко всем сторонам -->
                            <TableView fx:id="collectionTable" style="-fx-font-size: 1em;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <columns>
                                    <!-- Ваши столбцы таблицы -->
                                    <TableColumn prefWidth="110.0" style="-fx-wrap-text: true;" text="Идентификатор" />
                                    <TableColumn text="Имя" />
                           <TableColumn text="Возраст" />
                           <TableColumn prefWidth="100.0" text="Координата X" />
                           <TableColumn prefWidth="100.0" text="Координата Y" />
                           <TableColumn prefWidth="120.0" text="Дата инициализации" />
                           <TableColumn prefWidth="70.0" text="Цвет" />
                           <TableColumn text="Тип" />
                           <TableColumn prefWidth="90.0" text="Характер" />
                           <TableColumn prefWidth="90.0" text="Глубина пещеры" />
                           <TableColumn prefWidth="170.0" style="-fx-wrap-text: TRUE;" text="Количество сокровищ в пещере" />
                           <TableColumn text="Владелец" />
                                    <!-- Добавьте остальные столбцы по аналогии -->
                                </columns>
                        <columnResizePolicy>
                           <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                            </TableView>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Визуализация">
                    <content>
                  <ScrollPane>
                     <content>
                              <AnchorPane minHeight="0.0" minWidth="0.0" />
                     </content>
                  </ScrollPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
